{
  "manifest_version": 3,
  "name": "Web Dev Toolkit Pro",
  "version": "5.3",
  "description": "Advanced tools: URL modification, SFMC unwrapping, Pixel Perfect image overlay, and an on-page Ruler.",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "*://user-content.s4.sfmc-content.com/*",
    "*://*.rapp.com/*"
  ],
  "action": { 
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon_128.png"
    }
  },
  "background": {
    "service_worker": "background.js" 
  },
  "icons": {
    "128": "icon_128.png"
  }
}